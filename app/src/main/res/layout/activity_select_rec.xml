<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="cz.cvut.fit.damsupervisor.SelectInfoActivity">
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="55dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/select_recommendedselect"
        android:id="@+id/textViewSelectRec"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/overview_prots"
        android:id="@+id/textViewProtsRec"
        android:layout_below="@+id/textViewSelectRec"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextProtsRec"
        android:layout_below="@+id/textViewSelectRec"
        android:layout_toRightOf="@+id/textViewKcalOutput"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/overview_carbs"
        android:id="@+id/textViewCarbsRec"
        android:layout_below="@+id/editTextProtsRec"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextCarbsRec"
        android:layout_below="@+id/editTextProtsRec"
        android:layout_toRightOf="@+id/textViewKcalOutput"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/overview_fats"
        android:id="@+id/textViewFatsRec"
        android:layout_below="@+id/editTextCarbsRec"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextFatsRec"
        android:layout_below="@+id/editTextCarbsRec"
        android:layout_toRightOf="@+id/textViewKcalOutput"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/select_energykcal"
        android:id="@+id/textViewEnergyRec"
        android:layout_below="@+id/editTextFatsRec"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editTextEnergyRec"
        android:layout_below="@+id/editTextFatsRec"
        android:layout_toRightOf="@+id/textViewKcalOutput"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/select_kcaloutput"
        android:id="@+id/textViewKcalOutput"
        android:layout_below="@+id/editTextEnergyRec"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextKcalOutput"
        android:layout_below="@+id/editTextEnergyRec"
        android:layout_toRightOf="@+id/textViewKcalOutput"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/select_weightRec"
        android:id="@+id/textViewWeight"
        android:layout_below="@+id/editTextKcalOutput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextWeight"
        android:layout_below="@+id/editTextKcalOutput"
        android:layout_toRightOf="@+id/textViewKcalOutput"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"/>

    </RelativeLayout>
</ScrollView>

    <RelativeLayout android:id="@+id/footer" android:layout_width="fill_parent"
    android:layout_height="55dp"
    android:layout_alignParentBottom="true" style="@android:style/ButtonBar"
        android:background="@color/colorLightWhite">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_save"
        android:id="@+id/buttonSelectSave"
        android:onClick="onClickSave"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorFlatButton"
        android:textStyle="bold"
        style="?attr/borderlessButtonStyle"/>
    </RelativeLayout>

</RelativeLayout>